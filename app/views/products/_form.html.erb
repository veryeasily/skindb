<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :brand %>
    <%= form.text_field :brand %>
  </div>

  <div class="field">
    <%= form.label :product_type %>
    <%= form.select(:product_type, Product.product_types.keys.map {|key| [key.humanize, key]}) %>
  </div>

  <div class="field">
    <%= form.label :skin_type %>
    <%= form.select(:skin_type, Product.skin_types.keys.map {|key| [key.humanize, key]}) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
